<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="loginIvStyle">
        <item name="android:layout_width">@dimen/dp_16</item>
        <item name="android:layout_height">@dimen/dp_16</item>
        <item name="android:padding">@dimen/dp_3</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginEnd">@dimen/dp_35</item>
        <item name="android:layout_marginRight">@dimen/dp_35</item>
        <item name="android:layout_marginTop">@dimen/dp_2</item>
    </style>

    <style name="btnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_42</item>
        <item name="android:layout_marginEnd">@dimen/dp_25</item>
        <item name="android:layout_marginLeft">@dimen/dp_25</item>
        <item name="android:layout_marginRight">@dimen/dp_25</item>
        <item name="android:layout_marginStart">@dimen/dp_25</item>
        <!--<item name="android:background">@drawable/select_login_btn_bg</item>-->
        <item name="android:background">@drawable/login_btn0_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="forgetPasswordStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_3</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginRight">@dimen/dp_25</item>
        <item name="android:layout_marginEnd">@dimen/dp_25</item>
        <item name="android:textColor">@color/middlePurple</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="userInfoLocationIvStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/dp_15</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
    </style>
</resources>