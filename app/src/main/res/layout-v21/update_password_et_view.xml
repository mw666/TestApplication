<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/dp_10"
              android:layout_marginRight="@dimen/dp_10"
              android:background="@drawable/add_friend_et_bg"
              android:elevation="@dimen/dp_6"
              android:orientation="vertical"
              android:padding="@dimen/dp_3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/oldPasswordTextLayout"
            style="@style/inputTextLayoutStyle"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:hint="@string/input_old_password"
            android:textColorHint="@color/middlePurple"
            app:hintTextAppearance="@style/userInfoInputTextAppearence">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/oldPasswordInputEt"
                style="@style/inputEditStyle"
                android:inputType="textPassword"
                android:textColor="@color/black"/>

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/clearOldPassword"
            style="@style/loginIvStyle"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginBottom="@dimen/dp_8"
            android:src="@drawable/delete_purple_icon"
            android:visibility="invisible"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/newPasswordTextLayout"
            style="@style/inputTextLayoutStyle"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:hint="@string/input_new_password"
            android:textColorHint="@color/middlePurple"
            app:hintTextAppearance="@style/userInfoInputTextAppearence">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/newPasswordInputEt"
                style="@style/inputEditStyle"
                android:inputType="textPassword"
                android:textColor="@color/black"/>

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/clearNewPassword"
            style="@style/loginIvStyle"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginBottom="@dimen/dp_8"
            android:src="@drawable/delete_purple_icon"
            android:visibility="invisible"/>
    </RelativeLayout>

    <Button
        android:id="@+id/confirmBtn"
        style="@style/btnStyle"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/confirm"/>

</LinearLayout>