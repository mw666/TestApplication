<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_grey"
    android:orientation="vertical"
    tools:context="newmatch.zbmf.com.testapplication.fragments.msg_fragments.ChatListFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/mySpaceAppBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/attentionCollaplayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@android:color/transparent"
            app:title="@null"
            app:titleEnabled="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <ImageView
                    android:id="@+id/mySpaceTopIv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/card2" />

                <TextView
                    android:id="@+id/mySpaceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="我的主场"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/mySpaceHeadIv"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:background="@drawable/wave_border_less_ripple"
                    app:srcCompat="@drawable/ic_head_portrait_icon" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:gravity="center">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/BrowseIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_browse" />

                    <TextView
                        android:id="@+id/toDayBrowse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_toEndOf="@+id/BrowseIcon"
                        android:padding="@dimen/dp_2"
                        android:text="今日访客:2456"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:id="@+id/conutBrowse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toDayBrowse"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_toEndOf="@+id/BrowseIcon"
                        android:padding="@dimen/dp_2"
                        android:text="总浏览量:235658"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />
                </RelativeLayout>

            </RelativeLayout>

            <!--添加一个渐变层的遮罩-->
            <View
                android:id="@+id/statusView"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@drawable/gradient_view"
                android:fitsSystemWindows="true" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_68"
                android:fitsSystemWindows="true"
                android:minHeight="?attr/actionBarSize"
                android:paddingTop="@dimen/dp_20"
                android:visibility="invisible"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_19"
                    android:textStyle="bold"
                    tools:text="title" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/addDynationBtn"
                    android:layout_width="@dimen/dp_27"
                    android:layout_height="@dimen/dp_27"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="@dimen/dp_35"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="@drawable/wave_border_less_ripple"
                    android:padding="@dimen/dp_3"
                    app:srcCompat="@drawable/ic_add_dynation" />

            </android.support.v7.widget.Toolbar>

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_32"
                android:background="@drawable/wave_border_less_ripple"
                android:padding="@dimen/dp_4"
                android:src="@drawable/back_icon"
                android:visibility="visible" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mySpaceAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/wave_border_less_ripple"
                android:padding="@dimen/dp_3"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_add_dynation" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_15"
            android:weightSum="4"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/tabItemPhoto"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_38"
                android:layout_weight="1"
                android:background="@drawable/wave_border_less_ripple"
                android:drawableStart="@drawable/ic_photo_album"
                android:drawablePadding="@dimen/dp_2"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_3"
                android:text="@string/photo_alubm"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tabItemDynamic"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_38"
                android:layout_weight="1"
                android:background="@drawable/wave_border_less_ripple"
                android:drawableStart="@drawable/ic_dynamic_space"
                android:drawablePadding="@dimen/dp_2"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_3"
                android:text="@string/dynamic_space"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tabItemMyLike"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_38"
                android:layout_weight="1"
                android:background="@drawable/wave_border_less_ripple"
                android:drawableStart="@drawable/ic_my_like"
                android:drawablePadding="@dimen/dp_2"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_3"
                android:text="@string/my_like"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tabItemMyFans"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_38"
                android:layout_weight="1"
                android:background="@drawable/wave_border_less_ripple"
                android:drawableStart="@drawable/ic_my_fans"
                android:drawablePadding="@dimen/dp_2"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_3"
                android:text="@string/my_fans"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/mySpaceRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlAccentColor="@color/toast_bg_color"
            app:srlEnableLoadMore="true"
            app:srlEnablePreviewInEditMode="true"
            app:srlEnableRefresh="true"
            app:srlFooterHeight="45dp"
            app:srlHeaderHeight="45dp"
            app:srlPrimaryColor="@color/toast_bg_color">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:id="@+id/mySpaceHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_grey_1"
                app:srlAccentColor="@color/toast_bg_color"
                app:srlTextSizeTitle="@dimen/sp_12" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mySpaceRV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/topTab"
                android:focusable="false" />

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:id="@+id/mySpaceFooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_grey_1"
                app:srlAccentColor="@color/toast_bg_color"
                app:srlPrimaryColor="@color/toast_bg_color"
                app:srlTextSizeTitle="@dimen/sp_12">

            </com.scwang.smartrefresh.layout.footer.ClassicsFooter>

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/mySpaceFloatBtn"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginBottom="@dimen/dp_35"
        android:elevation="@dimen/dp_5"
        android:visibility="visible"
        app:backgroundTint="@color/black"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_anchorGravity="center|bottom"
        app:pressedTranslationZ="@dimen/dp_12"
        app:rippleColor="@color/black_3"
        app:srcCompat="@drawable/ic_add"
        tools:ignore="RtlHardcoded" />

</android.support.design.widget.CoordinatorLayout>
