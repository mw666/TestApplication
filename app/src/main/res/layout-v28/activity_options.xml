<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activitys.OptionsActivity">

    <include layout="@layout/normal_activity_toolbar" />

    <EditText
        android:id="@+id/optionsEt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_95"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@drawable/options_et_view"
        android:elevation="@dimen/dp_4"
        android:gravity="start|top"
        android:hint="请留下您宝贵的建议..."
        android:lineHeight="@dimen/dp_25"
        android:lines="5"
        android:minHeight="@dimen/dp_120"
        android:padding="@dimen/dp_4"
        android:textColor="@color/black"
        android:textColorHint="@color/black_4"
        android:textSize="@dimen/sp_15"
        android:textStyle="normal" />

    <Button
        android:id="@+id/commitBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@+id/optionsEt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@drawable/add_friend_et_bg"
        android:text="提现"
        android:textColor="@color/black" />

</RelativeLayout>