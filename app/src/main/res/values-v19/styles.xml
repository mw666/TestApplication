<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textInputTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorHint">@color/white_grey</item>
        <item name="colorControlNormal">@color/white_grey</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--activity公用的style-->
    <style name="activityPublicStyle" parent="@style/BaseTheme">
        <!--默认隐藏软件盘-->
        <item name="android:windowSoftInputMode">stateHidden</item>
        <!--屏幕的方向设置为竖屏-->
        <item name="android:screenOrientation">portrait</item>
        <!--设置configChanges-->
        <item name="android:configChanges">orientation|keyboardHidden|screenSize</item>
    </style>
</resources>