<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="newmatch.zbmf.com.testapplication.fragments.MsgFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/h72dp_toolbar_view"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/msgFGTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@drawable/topbar_bg"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/lavender"
            app:tabIndicatorHeight="@dimen/dp_3"
            app:tabMinWidth="@dimen/dp_80"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/Base.TextAppearance.AppCompat.Small"
            app:tabTextColor="@color/grey"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/msgViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
