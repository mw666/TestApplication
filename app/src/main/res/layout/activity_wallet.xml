<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.WalletActivity">

    <!--<include layout="@layout/normal_activity_toolbar" />-->
    <!--android:layout_marginTop="@dimen/dp_68"-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:scaleType="centerCrop"
        android:src="@mipmap/night_city_bg" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@drawable/wave_border_less_ripple"
        android:padding="@dimen/dp_3"
        android:src="@drawable/back_icon"
        android:visibility="visible" />

    <TextView
        android:id="@+id/balanceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_75"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_60"
        android:text="账户余额:230元"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/awardTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_75"
        android:layout_marginLeft="@dimen/dp_95"
        android:layout_marginTop="@dimen/dp_95"
        android:text="奖励金:440元"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/creditsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_75"
        android:layout_marginLeft="@dimen/dp_130"
        android:layout_marginTop="@dimen/dp_130"
        android:text="夜钻:23895"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/vp_outer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuHeadIv"
        android:layout_marginTop="@dimen/dp_172"
        android:clipChildren="false"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/menuViewPager"
            android:layout_width="220dp"
            android:layout_height="@dimen/dp_100"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_13"
            android:clipChildren="false" />

    </LinearLayout>

</RelativeLayout>