<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/commentUserNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:padding="@dimen/dp_1"
        android:text="smallPopy"
        android:textColor="@color/tint_blue"
        android:textSize="@dimen/sp_15"/>

    <TextView
        android:id="@+id/revert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/commentUserNick"
        android:layout_toEndOf="@+id/commentUserNick"
        android:gravity="center"
        android:padding="@dimen/dp_1"
        android:text="@string/revert"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"/>
    <TextView
        android:id="@+id/userRevertNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_1"
        android:text="小老鼠:"
        android:layout_toRightOf="@+id/revert"
        android:gravity="center"
        android:textColor="@color/tint_blue"
        android:textSize="@dimen/sp_15"/>
    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_toRightOf="@+id/userRevertNick"
        android:text="啦啦啦啦啦啦啦。。。。"/>
</RelativeLayout>