<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/avatarL"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_85"
    android:background="@color/white"
    android:orientation="horizontal">

    <newmatch.zbmf.com.testapplication.custom_view.RoundImageView
        android:id="@+id/avatarIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/touxiang_icon"
        tools:ignore="RtlHardcoded" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                style="@style/tvStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_18"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_5"
                android:visibility="visible"
                tools:text="二狗子"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userSexAndAge"
                    style="@style/tvStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_5"
                    android:visibility="visible"
                    android:textSize="12sp"
                    tools:text="二狗子"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/userAccount"
                    style="@style/tvStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:gravity="left|center_vertical"
                    android:textSize="12sp"
                    android:paddingBottom="@dimen/dp_5"
                    android:visibility="visible"
                    tools:text="137184753"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/goToSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/wave_border_less_ripple"
            android:src="@drawable/right_arrow_purple_icon"
            android:visibility="visible"/>
    </FrameLayout>
</LinearLayout>