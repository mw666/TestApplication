<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/add_friend_et_bg"
              android:paddingLeft="@dimen/dp_4"
              android:paddingRight="@dimen/dp_4"
              android:paddingBottom="@dimen/dp_15"
              android:paddingTop="@dimen/dp_15"
              android:orientation="horizontal"
              xmlns:tools="http://schemas.android.com/tools">

        <newmatch.zbmf.com.testapplication.utils.ContainsEmojiEditText
            android:id="@+id/inputOptions"
            android:layout_width="@dimen/dp_265"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center"
            android:textCursorDrawable="@drawable/et_cursor_color"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/comment_et_view_bg"
            android:gravity="top|left"
            android:hint="@string/options_tip"
            android:inputType="textMultiLine"
            android:minHeight="80dp"
            android:minLines="4"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingTop="3dp"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textColorHint="@color/black_cd"
            android:textSize="15sp"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>

        <ImageView
            android:id="@+id/sendOptions"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/comment_send_bg"
            android:paddingEnd="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@drawable/send_icon"
            tools:ignore="RtlSymmetry"
            android:layout_marginEnd="@dimen/dp_7"/>
</LinearLayout>