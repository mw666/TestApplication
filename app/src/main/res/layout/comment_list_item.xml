<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_4">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/commentUserAvatar"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/wave_border_less_ripple"
        app:srcCompat="@drawable/ic_head_portrait_icon" />

    <TextView
        android:id="@+id/userNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_toEndOf="@+id/commentUserAvatar"
        android:gravity="center"
        android:lines="1"
        android:padding="@dimen/dp_2"
        android:text="雅典娜的妥协"
        android:textColor="@color/black_3"
        android:textSize="@dimen/sp_11"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userCommentContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNick"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_toEndOf="@+id/commentUserAvatar"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:maxLines="5"
        android:layout_marginEnd="@dimen/dp_40"
        android:padding="@dimen/dp_2"
        android:text="真是聪明的二狗，赵拉斯。。。"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/answerCommentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:visibility="gone"
        android:layout_below="@+id/userCommentContent"
        android:layout_toEndOf="@+id/commentUserAvatar" />

    <TextView
        android:id="@+id/expandCommentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answerCommentList"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toEndOf="@+id/commentUserAvatar"
        android:drawableStart="@drawable/line_small"
        android:drawableEnd="@drawable/ic_arrow_down_black4"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:padding="@dimen/dp_2"
        android:text="展开2条回复"
        android:textColor="@color/black_4"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/zanCommentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_6"
        android:background="@drawable/wave_border_less_ripple"
        android:drawableStart="@drawable/ic_like_heart_gray"
        android:padding="@dimen/dp_3"
        android:text="36"
        android:gravity="center"
        android:drawablePadding="@dimen/dp_3"
        android:textColor="@color/black_4"
        android:textSize="@dimen/sp_11" />

</RelativeLayout>