<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/dp_7"
              android:paddingTop="@dimen/dp_7">

    <newmatch.zbmf.com.testapplication.utils.ContainsEmojiEditText
        android:id="@+id/nickEt"
        android:layout_width="@dimen/dp_285"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/comment_et_view_bg"
        android:gravity="center_vertical|left"
        android:hint="@string/input_your_nick"
        android:inputType="textMultiLine"
        android:lines="1"
        android:maxLength="16"
        android:minHeight="30dp"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_3"
        android:paddingRight="@dimen/dp_3"
        android:paddingTop="@dimen/dp_5"
        android:textColor="@color/black"
        android:textColorHint="@color/white_gray"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/sendNick"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_25"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/dp_7"
        android:layout_marginRight="@dimen/dp_7"
        android:background="@drawable/comment_send_bg"
        android:paddingEnd="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:src="@drawable/send_icon"
        tools:ignore="RtlSymmetry"/>

</LinearLayout>