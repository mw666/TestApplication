<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/vipIcon"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        app:srcCompat="@drawable/ic_vip_gold" />

    <TextView
        android:id="@+id/vipTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/vipIcon"
        android:padding="@dimen/dp_3"
        android:text="开通会员"
        android:textColor="@color/gold"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold|italic" />

    <View
        android:id="@+id/vipLine"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_2"
        android:layout_below="@+id/vipIcon"
        android:layout_marginStart="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/gold" />

    <TextView
        android:id="@+id/vipTipContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vipLine"
        android:layout_marginTop="@dimen/dp_7"
        android:padding="@dimen/dp_5"
        android:text="开通vip方可查看私密相册和视频"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/rmbIcon"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_below="@+id/vipTipContent"
        android:layout_marginTop="@dimen/dp_7"
        app:srcCompat="@drawable/ic_rmb_gold" />

    <TextView
        android:id="@+id/rmbValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vipTipContent"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_toEndOf="@+id/rmbIcon"
        android:padding="@dimen/dp_5"
        android:text="25元"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/openVipBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@+id/vipTipContent"
        android:layout_alignParentEnd="true"
        android:background="@drawable/vip_open_btn_gold_selector"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>