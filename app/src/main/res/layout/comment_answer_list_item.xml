<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_4">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/commentAnswerUserAvatar"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/wave_border_less_ripple"
        app:srcCompat="@drawable/ic_head_portrait_icon" />

    <TextView
        android:id="@+id/answerUserNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_toEndOf="@+id/commentAnswerUserAvatar"
        android:gravity="center"
        android:lines="1"
        android:padding="@dimen/dp_2"
        android:text="雅典娜的妥协"
        android:textColor="@color/black_3"
        android:textSize="@dimen/sp_11"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userAnswerCommentContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answerUserNick"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_40"
        android:layout_toEndOf="@+id/commentAnswerUserAvatar"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:maxLines="5"
        android:padding="@dimen/dp_2"
        android:text="慢慢的起舞看你落下的身影，渐渐看你踮起脚尖"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/zanCommentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_6"
        android:background="@drawable/wave_border_less_ripple"
        android:drawableStart="@drawable/ic_like_heart_gray"
        android:padding="@dimen/dp_3"
        android:text="36"
        android:gravity="center"
        android:drawablePadding="@dimen/dp_3"
        android:textColor="@color/black_4"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>