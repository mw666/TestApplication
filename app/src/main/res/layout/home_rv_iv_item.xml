<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dp_2"
    android:layout_marginTop="@dimen/dp_3"
    android:layout_marginRight="@dimen/dp_2"
    android:layout_marginBottom="@dimen/dp_3"
    android:gravity="center"
    android:orientation="vertical"
    app:cardBackgroundColor="#c4c6c8"
    app:cardCornerRadius="4dp"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="true"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/rv_iv"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_gravity="bottom"
        android:background="@drawable/alpha_bg_view"
        android:paddingTop="@dimen/dp_1"
        android:paddingBottom="@dimen/dp_1">

        <TextView
            android:id="@+id/userNick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_7"
            android:text="小姐姐昵称"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lineStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userNick"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="在线"
            android:textColor="@color/pinkColor"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userNick"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_toEndOf="@+id/lineStatus"
            android:layout_toRightOf="@+id/lineStatus"
            android:text="23.3Km"
            android:textColor="@color/tint_green"
            android:textSize="@dimen/sp_11"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/dianZanIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:padding="@dimen/dp_6"
            android:src="@drawable/dian_zan_purple_icon" />

        <TextView
            android:id="@+id/moodsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/dianZanIv"
            android:text="@string/moodsValue"
            android:textColor="@color/mPurple"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/moodsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/moodsTitle"
            android:layout_alignStart="@+id/moodsTitle"
            android:layout_alignLeft="@+id/moodsTitle"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_13"
            android:text="79"
            android:textColor="@color/user_add_bg_color"
            android:textSize="@dimen/sp_14"
            android:textStyle="italic" />

    </RelativeLayout>
</android.support.v7.widget.CardView>