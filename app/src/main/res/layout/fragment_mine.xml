<newmatch.zbmf.com.testapplication.views.PersonalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/personalSc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/headRv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_170"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_personinfo_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/header_background"/>
            <!--添加一个渐变层的遮罩-->
            <View
                android:id="@+id/stateBarView"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/gradient_view"
                android:fitsSystemWindows="true"/>

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_22"
                android:background="@drawable/back_oval_bg"
                android:padding="@dimen/dp_6"
                android:src="@drawable/back_icon"
                android:visibility="gone"/>

        </RelativeLayout>

        <include
            android:id="@+id/mine_user_view"
            layout="@layout/user_avatar_view"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/userCenterTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/no_corner_white_bg"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/lavender"
            app:tabIndicatorHeight="@dimen/dp_3"
            app:tabMinWidth="@dimen/dp_90"
            app:tabMode="fixed"
            app:tabTextAppearance="@style/Base.TextAppearance.AppCompat.Small"
            app:tabTextColor="@color/black"/>
        <!--app:tabSelectedTextColor="@color/white"-->

        <android.support.v4.view.ViewPager
            android:id="@+id/userCenterViewPager"
            android:layout_width="match_parent"
            android:layout_height="1080dp"/>
    </LinearLayout>
</newmatch.zbmf.com.testapplication.views.PersonalScrollView>

