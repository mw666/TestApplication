<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="newmatch.zbmf.com.testapplication.fragments.dynamic_fragments.DynamicFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/dynamicAppbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f7f7f7"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@android:color/transparent"
            app:titleEnabled="false">

            <!--<include layout="@layout/normal_activity_toolbar" />-->

            <!--<include layout="@layout/top_bar_content_view" />-->

            <newmatch.zbmf.com.testapplication.views.customViewPager.MZBannerView
                android:id="@+id/dynamicBanner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/vp_bg"
                app:canLoop="true"
                app:indicatorAlign="center"
                app:indicatorPaddingLeft="10dp"
                app:isShowIndicator="true"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                app:middle_page_cover="true"
                app:open_mz_mode="true" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/dynamicToolBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/topbar_bg"
                android:fitsSystemWindows="true"
                android:visibility="visible"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <android.support.design.widget.TabLayout
                    android:id="@+id/dynamicTab"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:fitsSystemWindows="true"
                    app:background="@drawable/no_corner_white_bg"
                    app:layout_collapseMode="pin"
                    app:tabGravity="center"
                    app:tabIndicatorColor="@color/gold_15"
                    app:tabIndicatorHeight="@dimen/dp_2"
                    app:tabMode="scrollable"
                    app:tabRippleColor="@color/light_blue"
                    app:tabSelectedTextColor="@color/gold_15"
                    app:tabTextAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    app:tabTextColor="@color/gray" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/dp_31"
                    android:background="@color/colorPrimaryDark_1"
                    android:padding="@dimen/dp_2"
                    app:srcCompat="@drawable/ic_arrow_right_white" />

            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dp_0_3"-->
        <!--android:background="@color/gray" />-->

        <android.support.v4.view.ViewPager
            android:id="@+id/dynamicViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <!--添加一个渐变层的遮罩-->
    <View
        android:id="@+id/statusView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:background="@drawable/gradient_view"
        android:fitsSystemWindows="true"
        android:visibility="gone" />

</android.support.design.widget.CoordinatorLayout>
