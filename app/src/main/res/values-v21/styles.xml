<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textInputTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorAccent">@color/deepPurple</item>
        <item name="android:textColorHint">@color/pink_6</item>
        <item name="colorControlNormal">@color/white_grey</item>
        <item name="colorControlActivated">@color/deepPurple</item>
        <item name="colorControlHighlight">@color/deepPurple</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <!--图片选择器的主题-->
    <style name="Matisse.MyZhihu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black_13</item>
        <item name="colorPrimaryDark">@color/black_13</item>
        <item name="toolbar">@style/Toolbar.Zhihu</item>
        <item name="album.dropdown.title.color">@color/zhihu_album_dropdown_title_text</item>
        <item name="album.dropdown.count.color">@color/zhihu_album_dropdown_count_text</item>
        <item name="album.element.color">@color/light_orange</item>
        <item name="album.thumbnail.placeholder">@color/zhihu_album_dropdown_thumbnail_placeholder
        </item>
        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.textColor">@color/zhihu_album_empty_view</item>
        <item name="item.placeholder">@color/zhihu_item_placeholder</item>
        <item name="item.checkCircle.backgroundColor">
            @color/zhihu_item_checkCircle_backgroundColor
        </item>
        <item name="item.checkCircle.borderColor">@color/zhihu_item_checkCircle_borderColor</item>
        <item name="page.bg">@color/zhihu_page_bg</item>
        <item name="bottomToolbar.bg">@color/zhihu_bottom_toolbar_bg</item>
        <item name="bottomToolbar.preview.textColor">@color/zhihu_bottom_toolbar_preview</item>
        <item name="bottomToolbar.apply.textColor">@color/zhihu_selector_imgs_bottom_textcolor
        </item>
        <item name="preview.bottomToolbar.back.textColor">
            @color/zhihu_preview_bottom_toolbar_back_text
        </item>
        <item name="preview.bottomToolbar.apply.textColor">
            @color/zhihu_preview_bottom_toolbar_apply
        </item>
        <item name="listPopupWindowStyle">@style/Popup.Zhihu</item>
        <item name="capture.textColor">@color/zhihu_capture</item>
    </style>

    <style name="alertDialogStyle01" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:windowSoftInputMode">adjustPan|stateVisible</item>
    </style>

    <style name="FullscreenTheme" parent="@style/BaseTheme">
        <item name="android:statusBarColor">@color/middlePurpleAphla</item>
        <item name="android:windowBackground">@drawable/t3</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--activity公用的style-->
    <style name="activityPublicStyle" parent="@style/BaseTheme">
        <!--默认隐藏软件盘-->
        <item name="android:windowSoftInputMode">stateHidden</item>
        <!--屏幕的方向设置为竖屏-->
        <item name="android:screenOrientation">portrait</item>
        <!--设置configChanges-->
        <item name="android:configChanges">orientation|keyboardHidden|screenSize</item>
        <!--设置toolBar左边无标题-->
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--输入editText属性-->
        <item name="android:colorAccent">@color/deepPurple</item>
        <item name="android:textColorHint">@color/pink_6</item>
        <item name="colorControlNormal">@color/white_grey</item>
        <item name="colorControlActivated">@color/deepPurple</item>
        <item name="colorControlHighlight">@color/deepPurple</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

</resources>