<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="newmatch.zbmf.com.testapplication">

    <!-- 获取网络权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 接收网络 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!-- 读写文件的权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- 读取手机的联系人权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name=".base.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- region 适配全面屏 -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.4"/>
        <!-- endregion -->
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activitys.RegisterActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/textInputTheme"
            android:windowSoftInputMode="stateHidden|adjustResize">

        </activity>
        <activity
            android:name=".activitys.ForgetPassWordActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/textInputTheme"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
        <activity
            android:name=".activitys.UserInfoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/textInputTheme"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
        <activity
            android:name=".activitys.SelectCityActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity
            android:name=".activitys.UserDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="newmatch.zbmf.com.testapplication"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths_public">
            </meta-data>
        </provider>

        <activity
            android:name=".activitys.TestActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity
            android:name=".activitys.AddFirendActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity
            android:name=".activitys.SearchActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <!-- 专门用来申请权限的activity -->
        <activity
            android:name=".activitys.PermissionsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/activityApplyPermissionsTheme">
        </activity>
        <activity android:name=".activitys.SettledActivity">
        </activity>
        <activity android:name=".activitys.VIPActivity">
        </activity>
        <activity
            android:name=".activitys.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">

        </activity>
        <activity android:name=".activitys.UserCenterActivity">
        </activity>
    </application>

</manifest>